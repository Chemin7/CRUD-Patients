<%- include('partials/_header') %>
<body>
    <h1>Index Patients</h1>
    <% if (user) { %>
      <h1>Welcome, <%= user.email %>!</h1>
      <a href="/logout">Logout</a>
    <% } else { %>
      <h1>Welcome, guest!</h1>
      <a href="/register">Register</a> | <a href="/login">Login</a>
    <% } %>
    <a href="/patients/add-patient">Add patient</a>
    <main class="col-sm">
        <% if(patients) {%>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Birthday</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <% patients.forEach((patient)=> { %>
                <tr>
                  <td>
                    <%= patient.id %>
                  </td>
                  <td>
                    <%= patient.first_name %>
                  </td>
                  <td>
                    <%= patient.last_name %>
                  </td>
                  <td>
                    <%= patient.phone %>
                  </td>
                  <td>
                    <%=moment( patient.birthday).format('YYYY-MM-DD')  %>
                  </td>
                  <td>
                    <a href="/patients/update-patient?id=<%= patient.id %>"><i class="fa fa-pencil-square" aria-hidden="true"></i></a>
                  </td>
                  <td>
                    <button data-id="<%=patient.id %>" class="delete"><i class="fa fa-minus-circle" aria-hidden="true"></i></button>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
          <%}%>
        </main>
        <%- include('partials/_footer') %>