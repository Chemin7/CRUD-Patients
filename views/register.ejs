<%- include('partials/_header') %>
  <body>
    <h1>Register</h1>
    <% if (typeof errors !=='undefined' ) { %>
      <% for (let i=0; i < errors.length; i++) { %>
        <div class="alert alert-danger">
          <%= errors[i].msg %>
        </div>
      <% } %>
    <% } %>

  
        

        <form action="/register" method="post">
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <label lass="form-label"  for="email">Email:</label>
                <input class="form-control" type="email" id="email" name="email" value="<%= email || '' %>" required />
              </div>
              
            </div>
            
            <div class="col">
              <div class="form-outline">
                <label class="form-label" for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="password" value="<%= password || '' %>" required />
              </div>
            </div>
          </div>

        
          <!-- Submit button -->

          <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>

        </form>
        <p>Already have an account? <a href="/login">Login</a></p>
          </body>
          <%- include('partials/_footer') %>