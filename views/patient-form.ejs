<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">

  <title>Document</title>
</head>

<body>
  <h1>Registrar paciente</h1>
  <div class="container">
    <div class="row">
      <div class="col-lg">
        <% if (typeof errors !=='undefined' ) { %>
          <% for (let i=0; i < errors.length; i++) { %>
            <div class="alert alert-danger">
              <%= errors[i].msg %>
            </div>
          <% } %>
        <% } %>
        <form id="patient-form" method="post" action="/patients">
                   <div class="d-flex flex-row" id="options">
                    <div  class="p-2"><a  id="add" href="#">AÃ±adir</a> </div>
                    <div  class="p-2"><a id="update" href="#">Modificar</a></div>
                    <div  class="p-2"><a id="delete" href="#">Eliminar</a></div>
                  </div>
                 

                  <%- include('partials/base-fields') %>
                  

                  
                  
                  

                  <!-- Submit button -->

                  <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>

        </form>
      </div>

      <div class="col-sm">
        <% if(patients) {%>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Birthday</th>
              </tr>
            </thead>
            <tbody>
              <% patients.forEach((patient)=> { %>
                <tr>
                  <td>
                    <%= patient.id %>
                  </td>
                  <td>
                    <%= patient.first_name %>
                  </td>
                  <td>
                    <%= patient.last_name %>
                  </td>
                  <td>
                    <%= patient.phone %>
                  </td>
                  <td>
                    <%= patient.birthday %>
                  </td>

                </tr>
                <% }) %>
            </tbody>
          </table>
          <%}%>
      </div>
    </div>
  </div>
  <script src="js/script.js"></script>

</body>

</html>